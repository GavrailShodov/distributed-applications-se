@model Bikes.ViewModels.Orders.SearchVM
@{
}

<h4>Search</h4>

<div class="search-container pb-4">
    <form id="searchForm" action="/Orders/Search" method="post" class="form-inline">
        <input type="text" id="firstName" class="form-control mr-2" placeholder="Search.." name="firstName">
        <button type="submit" class="btn btn-primary mr-2">Search</button>
        <a href="/Orders/Index" class="btn btn-secondary">Reset</a>
    </form>
</div>


<h2>Orders</h2>

<div class="table-responsive">
    <table class="table table-striped table-bordered table-hover">
        <thead class="thead-dark">
            <tr>
                <th>
                    Details
                </th>
                <th>
                    Quantity
                </th>
                <th>
                    Customer
                </th>
                <th>
                    Baker
                </th>
                <th>
                    Placed On
                </th>
                <th>
                    Express delivery
                </th>
                <th>
                    Total (BGN)
                </th>
                <th>
                    Tip (BGN)
                </th>
                <th colspan="2">
                    Actions
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Orders)
            {
                <tr>
                    <td>
                        @item.Details
                    </td>
                    <td>
                        @item.Problems
                    </td>
                    <td>
                        @item?.Customer?.FirstName @item?.Customer?.LastName
                    </td>
                    <td>
                        @item?.Employee?.FirstName @item?.Employee?.LastName
                    </td>
                    <td>
                        @item?.PlacedOn
                    </td>
                    <td>
                        @if (item.IsExpress)
                        {
                            <span class="badge badge-success">Yes</span>
                        }
                        else
                        {
                            <span class="badge badge-secondary">No</span>
                        }
                    </td>
                    <td>
                        @item?.Total
                    </td>
                    <td>
                        <a href="/Orders/Edit?id=@item.Id" class="btn btn-sm btn-primary">Edit</a>
                    </td>
                    <td>
                        <a href="/Orders/Delete?id=@item.Id" class="btn btn-sm btn-danger" onclick="return confirm('Delete Order?');">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<div class="d-flex justify-content-center mt-4">
    <a href="/Orders/Add" class="btn btn-success">Add +</a>
</div>

