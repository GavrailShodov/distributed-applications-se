@model Bikes.ViewModels.Customers.IndexVM
@{
}

<h4>Search</h4>

<div class="search-container pb-4">
    <form id="searchForm" action="/Customers/Search" method="post" class="form-inline">
        <input type="text" id="firstName" class="form-control mr-2" placeholder="Search.." name="firstName">
        <button type="submit" class="btn btn-primary">Search</button>
    </form>
</div>

<h4>Customers</h4>

<div class="table-responsive">
    <table class="table table-striped table-bordered table-hover">
        <thead class="thead-dark">
            <tr>
                <th>
                    First name
                </th>
                <th>
                    Last name
                </th>
                <th>
                    Address
                </th>
                <th>
                    Account Balance
                </th>
                <th>
                    Deluxe Account
                </th>
                <th>
                    Total orders
                </th>
                <th>
                    Date Of Registration
                </th>
                <th colspan="2">
                    Actions
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Customers)
            {
                <tr>
                    <td>
                        @item.FirstName
                    </td>
                    <td>
                        @item.LastName
                    </td>
                    <td>
                        @item.Address
                    </td>
                    <td>
                        @item.AccountBalance
                    </td>
                    <td>
                        @if (item.DeluxeAccount)
                        {
                            <span class="badge badge-success">Yes</span>
                        }
                        else
                        {
                            <span class="badge badge-secondary">No</span>
                        }
                    </td>
                    <td>
                        @item.TotalOrders
                    </td>
                    <td>
                        @item.RegisteredOn
                    </td>
                    <td>
                        <a href="/Customers/Edit?id=@item.Id" class="btn btn-sm btn-primary">Edit</a>
                    </td>
                    <td>
                        <a href="/Customers/Delete?id=@item.Id" class="btn btn-sm btn-danger" onclick="return confirm('Delete Customer?');">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<div class="d-flex justify-content-center mt-4">
    <a href="/Customers/Add" class="btn btn-success">Add +</a>
</div>
